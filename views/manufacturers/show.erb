<h2>Manufacturer Details</h2>

<ul>
  <li>Name: <%= @manufacturer.name() %></li>
  <li>Address: <%= @manufacturer.address() %></li>
  <li>Phone: <%= @manufacturer.phone() %></li>
</ul>
<form method="post" action="/manufacturers/<%=@manufacturer.id%>/delete">
  <input class="btn btn--input" type="submit" value="Remove Manufacturer">  <!--submit is a type of button -->
</form>
<!--
method = verb - either post or get, depending on REST route,
action = the URL of the path -->

<form method="get" action="/manufacturers/<%=@manufacturer.id%>/edit">
  <input class="btn btn--input" type="submit" value="Amend Manufacturer">
</form>
