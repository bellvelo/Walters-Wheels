<h1>Stock Alerts</h1>


<table id="critical stock">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Man ID</th>
      <th>Component</th>
      <th>Cost</th>
      <th>Price</th>
      <th>Margin</th>
      <th>Quantity</th>
      <th>Stock Level</th>
    </tr>
  </thead>
  <tbody>
    <% for item in @items%>
      <tr>
        <td><%=item.id%></td>
        <td><%=item.manufacturer_id%></td>
        <td><%=item.component%></td>
        <td><%=item.cost.to_i%></td>
        <td><%=item.price.to_i%></td>
        <td><%=item.margin.to_i%></td>
        <td><%=item.quantity.to_i%></td>
        <td><%=item.stock_level%></td>
      </tr>
    <% end %>
  </tbody>
</table>
