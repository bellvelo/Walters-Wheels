<h1>Most Profitable Items</h1>

<table id="profitable-stock">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Manufacturer</th>
      <th>Component</th>
      <th>Cost</th>
      <th>Price</th>
      <th>Quantity</th>
      <td style=color:red;>Margin</th>
    </tr>
  </thead>
  <tbody>
    <% for item in @items%>
      <tr>
        <td><%=item.id%></td>
        <td><%=item.man_name.name%></td>
        <td><%=item.component%></td>
        <td><%=item.cost.to_i%></td>
        <td><%=item.sale_price.to_i%></td>
        <td><%=item.quantity.to_i%></td>
        <td style=color:red;><%=item.margin.to_i%></td>
      </tr>
    <% end %>
  </tbody>
</table>
