<h2> List of all Items </h2>
<a href = "/items/new"> New Item</a>
<table id="item">
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Manufacturer_id</th>
      <th>Component</th>
      <th>Cost</th>
      <th>Price</th>
      <th>Margin</th>
      <th>Quantity</th>
      <th>Low Stock</th>
      <th>Critical Stock</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% for item in @items%>
      <tr>
        <td><%=item.id%></td>
        <td><%=item.manufacturer_id%></td>
        <td><%=item.component%></td>
        <td><%=item.cost.to_i%></td>
        <td><%=item.price.to_i%></td>
        <td><%=item.margin.to_i%></td>
        <td><%=item.quantity.to_i%></td>
        <td><%=item.low_stock.to_i%></td>
        <td><%=item.critical_stock.to_i%></td>
        <td><a href="/items/<%= item.id %>">Edit</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
